@model IEnumerable<ADSProject.Models.EstudianteViewModel>
@using ADSProject.Utils;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>

</p>

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Estudiantes</h3>
            </div>

            <div class="col-sm-6">
                <a class="btn btn-primary d-block" asp-action="Form" asp-route-operaciones="@Operaciones.agregar">Crear estudiante</a>
            </div>

        </div>

        <div class="col-sm-12">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" >
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idEstudiante)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombresEstudiante)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.apellidosEstudiante)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.codigoEstudiante)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correoEstudiante)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idEstudiante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombresEstudiante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.apellidosEstudiante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigoEstudiante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correoEstudiante)
                            </td>
                            <td>
                                <div class="d-flex">
                                    <a class="btn btn-primary"
                                       asp-route-idEstudiante="@item.idEstudiante"
                                       asp-action="Form"
                                       asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                    <a class="btn btn-warning mx-1"
                                       asp-route-idEstudiante="@item.idEstudiante"
                                       asp-action="Form"
                                       asp-route-operaciones="@Operaciones.leer">Leer</a>
                                    <a class="btn btn-danger"
                                       asp-route-idEstudiante="@item.idEstudiante"
                                       asp-action="Delete">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        }



                    </tbody>
                </table>
            }
            else
            {
                <h3 class="text-center">Lista vacia</h3>
            }


        </div>

    </div>

</div>

