@model ADSProject.Models.CarrerasViewModel

@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Form</h1>

<h4>CarrerasViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idCarrera" class="control-label"></label>
                <input type="hidden" id="operacion" value="@ViewData["Operaciones"]" />
                <input asp-for="idCarrera" class="form-control" />
                <span asp-validation-for="idCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreCarrera" class="control-label"></label>
                <input asp-for="nombreCarrera" class="form-control" />
                <span asp-validation-for="nombreCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoCarrera" class="control-label"></label>
                <input asp-for="codigoCarrera" class="form-control" />
                <span asp-validation-for="codigoCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            if ($("#operacion").val() == "leer") {
                $("form").find("input,select").attr("disabled", true);
            }
        });
    </script>



}
