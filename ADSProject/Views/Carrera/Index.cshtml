@model IEnumerable<ADSProject.Models.CarrerasViewModel>
@using ADSProject.Utils;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}








<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Carreras</h3>
            </div>

            <div class="col-sm-6">
                <a class="btn btn-primary d-block" asp-action="Form" asp-route-operaciones="@Operaciones.agregar">Crear carrera</a>
            </div>

        </div>

        <div class="col-sm-12">

            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idCarrera)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreCarrera)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.codigoCarrera)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idCarrera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombreCarrera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigoCarrera)
                            </td>
                            <td>
                                <div class="d-flex">
                                    <a class="btn btn-primary"
                                       asp-route-idCarrera="@item.idCarrera"
                                       asp-action="Form"
                                       asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                    <a class="btn btn-warning mx-1"
                                       asp-route-idCarrera="@item.idCarrera"
                                       asp-action="Form"
                                       asp-route-operaciones="@Operaciones.leer">Leer</a>
                                    <a class="btn btn-danger"
                                       asp-route-idCarrera="@item.idCarrera"
                                       asp-action="Delete">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3 class="text-center">Lista vacia</h3>
            }


        </div>

    </div>

</div>