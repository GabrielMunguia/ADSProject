@model IEnumerable<ADSProject.Models.MateriaViewModel>
@using ADSProject.Utils;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>

</p>

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Materias</h3>
            </div>

            <div class="col-sm-6">
                <a class="btn btn-primary d-block" asp-action="Form" asp-route-operaciones="@Operaciones.agregar">Crear materia</a>
            </div>

        </div>

        <div class="col-sm-12">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idMateria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreMateria)
                            </th>
                         
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idMateria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreMateria)
                                </td>
                                
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-primary"
                                           asp-route-idMateria="@item.idMateria"
                                           asp-action="Form"
                                           asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                        <a class="btn btn-warning mx-1"
                                           asp-route-idMateria="@item.idMateria"
                                           asp-action="Form"
                                           asp-route-operaciones="@Operaciones.leer">Leer</a>
                                        <a class="btn btn-danger eliminar"
                                           asp-route-idMateria="@item.idMateria"
                                           asp-action="Delete">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            }
            else
            {
                <h3 class="text-center">Lista vacia</h3>
            }


        </div>

    </div>

</div>

